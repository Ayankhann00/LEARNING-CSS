/* EXTERNAL CSS */
p {
    color: purple;
}
/* giving the color to the class in HTML USING EXTERNAL CSS */
.box {
    COLOR: RED;
}
/* GIVING COLOR TO ID */
#header {  
    COLOR: VIOLET;
}

#footer {
    COLOR: GREEN;
}
