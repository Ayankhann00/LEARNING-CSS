//CSS PART
.class1 {
    border: 2px solid crimson;
    background-color: bisque;
    font-size: medium;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-weight: bold;
    padding: 34px;
    margin: 34px auto;
}

.btn {
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-weight: bolder;
    border: none;
    padding: 6px;
    background-color: cyan;
    font-size: 12px;
    border-radius: 4px;
    cursor: pointer;
}

a {
    text-decoration: none;
}

a:hover {
    color: rgb(255, 266, 267);
    background-color: violet;
}

a:visited {
    color: chartreuse;
}

.btn:visited {
    color: blue;
}

.btn:hover {
    color: chocolate;
    background-color: coral;
}
